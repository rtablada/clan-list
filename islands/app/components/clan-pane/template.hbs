{{#if clanDetail}}
<ul class="collection with-header">
  <li class="collection-header"><h4>{{clanDetail.name}} - {{clanDetail.tag}}</h4></li>
  {{#each clanDetail.players as |player|}}
    <li class="collection-item">
      {{player.name}}
      <span class="badge">{{player.score}}</span>
    </li>
  {{/each}}

  <li class="collection-item"><a href="#" {{action 'hideDetail'}}><i class="mdi-content-reply"></i> Back</a></li>
</ul>
{{else}}
  <ul class="collection with-header">
    <li class="collection-header"><h4>Clans</h4></li>
    {{#each clans as |clan|}}
      <li class="collection-item clan-item" {{action 'showClanDetails' clan.value}}>
        {{clan.value.name}} -
        <span class="grey-text text-lighten-1">{{clan.value.tag}}</span>
        <span class="badge">{{clan.count}}</span>
      </li>
    {{/each}}
  </ul>
{{/if}}
